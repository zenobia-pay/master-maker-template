{
  "name": "video-editor",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpx vite dev --host 0.0.0.0 --port 8787\" \"wrangler dev --port 9999 --ip 0.0.0.0\"",
    "dev:client": "vite",
    "build": "pnpm run build:client",
    "build:client": "vite build",
    "preview:client": "vite preview",
    "typecheck": "npx tsc --noEmit",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "predeploy": "pnpm run typecheck",
    "deploy": "pnpm run build && wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "auth:generate": "npx @better-auth/cli@latest generate --config src/auth/index.ts --output src/db/auth.schema.ts -y",
    "auth:format": "npx prettier --write src/db/auth.schema.ts",
    "auth:update": "pnpm run auth:generate && pnpm run auth:format",
    "db:generate": "drizzle-kit generate",
    "db:generate:user-shard": "drizzle-kit generate --config drizzle-do.config.ts",
    "db:migrate:dev": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:studio:dev": "drizzle-kit studio",
    "db:studio:user-shard": "drizzle-kit studio --config drizzle-user-shard.config.ts",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio"
  },
  "dependencies": {
    "@auth/core": "^0.35.0",
    "@hono/zod-validator": "^0.2.2",
    "@solidjs/router": "^0.15.3",
    "better-auth": "^1.3.4",
    "better-auth-cloudflare": "^0.2.2",
    "drizzle-orm": "0.44.4",
    "hono": "^4.5.11",
    "lucide-solid": "^0.542.0",
    "nanoid": "^5.0.7",
    "solid-js": "^1.8.22",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241004.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.11.1",
    "prettier": "^3.6.2",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-plugin-solid": "^2.11.8",
    "wrangler": "^4.28.0"
  }
}
